<div class="d-flex justify-content-end">
  <nav aria-label="Page navigation">
    <ul class="pagination">
      <!-- Back 1 -->
      {{#compare @root.page 1 operator="!=="}}
      <li class="page-item">
      {{/compare}}
      {{#compare @root.page 1}}
      <li class="page-item disabled">
      {{/compare}}
        <a class="page-link" href="?page={{math @root.page "-" 1}}" aria-label="Previous">
          <span aria-hidden="true">Previous</i></span>
          <span class="sr-only">Previous</span>
        </a>
      </li>

      <!-- Current page -->
      <li class="page-item">
        <a class="page-link" href="?page={{@root.page}}">
          <b>{{@root.page}}</b>
        </a>
      </li>

      <!-- Next page -->
      {{#compare @root.page @root.last operator="<"}}
      <li class="page-item">
      {{/compare}}
      {{#compare @root.page @root.last operator=">="}}
      <li class="page-item disabled">
      {{/compare}}
      <a class="page-link" href="?page={{math @root.page "+" 1}}" aria-label="Next">
        <span aria-hidden="true">Next</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
